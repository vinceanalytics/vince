{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "module": "es2020",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./",
    "strictPropertyInitialization": false,
    "strict": true,
    "baseUrl": ".",
    "types": [],
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "demo/**/*",
    "vendor/**/*"
  ]
}